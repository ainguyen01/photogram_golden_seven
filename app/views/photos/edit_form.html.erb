
<h1>
  Edit your photo
</h1>

<form action="/update_photos/<%= @photo.id%>">

  <div class="">
    <label for="url">
      Image URL
    </label>
    <input type="text" id="url" name="the_source" value="<%=@photo.source%>">
  </div>
  <div class="">
    <label for="caption">
      The Caption
    </label>
    <input type="text" id="caption" name="the_caption" value="<%=@photo.caption%>">
  </div>

  <button>Edit a photo</button>
</form>
